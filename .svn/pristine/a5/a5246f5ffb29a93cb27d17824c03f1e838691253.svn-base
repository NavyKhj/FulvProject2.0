package com.tcps.common_module.baseMvp;import android.app.Activity;import android.content.Intent;import android.os.Bundle;import android.support.v4.app.Fragment;import com.tcps.common_module.R;/** * Describe:基类Fragment * Created by liying on 2018/2/7. */@SuppressWarnings("unused")public abstract class BaseFragment extends Fragment {    protected boolean isTransAnim;    @Override    public void onCreate(Bundle savedInstanceState) {        isTransAnim = true;        super.onCreate(savedInstanceState);    }    @Override    public void onPause() {        super.onPause();    }    @Override    public void onStop() {        super.onStop();    }    @Override    public void onDestroy() {        super.onDestroy();    }    /**     * [页面跳转]     *     * @param clz 要跳转的Activity     */    public void startActivity(Activity activity, Class<?> clz) {        activity.startActivity(new Intent(activity, clz));        if (isTransAnim)            activity.overridePendingTransition(R.anim.activity_start_zoom_in, R.anim                    .activity_start_zoom_out);    }    /**     * [页面跳转]     *     * @param clz    要跳转的Activity     * @param intent intent     */    public void startActivity(Activity activity, Class<?> clz, Intent intent) {        intent.setClass(activity, clz);        startActivity(intent);        if (isTransAnim)            activity.overridePendingTransition(R.anim.activity_start_zoom_in, R.anim                    .activity_start_zoom_out);    }    /**     * [携带数据的页面跳转]     *     * @param clz    要跳转的Activity     * @param bundle bundel数据     */    public void startActivity(Activity activity, Class<?> clz, Bundle bundle) {        Intent intent = new Intent();        intent.setClass(activity, clz);        if (bundle != null) {            intent.putExtras(bundle);        }        startActivity(intent);        if (isTransAnim)            activity.overridePendingTransition(R.anim.activity_start_zoom_in, R.anim                    .activity_start_zoom_out);    }    /**     * [含有Bundle通过Class打开编辑界面]     *     * @param clz         要跳转的Activity     * @param bundle      bundel数据     * @param requestCode requestCode     */    public void startActivityForResult(Activity activity, Class<?> clz, Bundle bundle,                                       int requestCode) {        Intent intent = new Intent();        intent.setClass(activity, clz);        if (bundle != null) {            intent.putExtras(bundle);        }        startActivityForResult(intent, requestCode);        if (isTransAnim)            activity.overridePendingTransition(R.anim.activity_start_zoom_in, R.anim                    .activity_start_zoom_out);    }}